---
import Container from "../common/Container.astro"
import SocialLinks from "../social/SocialLinks.astro"
---

<footer class="footer" transition:name="footer">
  <Container>
    <div class="content">
      <p class="name">Sothearo</p>
      <p class="copyright">Â© 2025. All rights reserved</p>
      <SocialLinks />
    </div>
  </Container>
</footer>

<style>
  .footer {
    padding-block: 4rem;

    @media (max-width: 768px) {
      padding-bottom: 2rem;
    }

    .content {
      display: flex;
      justify-content: space-between;
      align-items: center;

      @media (max-width: 768px) {
        flex-direction: column;
        justify-content: center;
        gap: 1rem;
      }

      .name,
      .copyright {
        margin-block: 0;
      }
    }

    .name {
      color: var(--color-foreground-muted);
      font: var(--font-sm);
      font-weight: 500;
    }

    .copyright {
      color: color-mix(in srgb, var(--color-foreground-muted) 70%, var(--color-background));
      font: var(--font-xs);
      font-weight: 400;
    }
  }
</style>
