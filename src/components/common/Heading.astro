---
type HeadingTag
= | "h1"
  | "h2"
  | "h3"
  | "h4"

interface Props {
  as?: HeadingTag
  size?: "3xl" | "2xl" | "xl" | "lg" | "md"
  class?: string
}


const { as: Tag = "h1", size = "3xl", class: className }: Props = Astro.props
---

<Tag class:list={[size, className]}>
  <slot />
</Tag>

<style>
  .\33 xl {
    font: var(--font-3xl);
    font-weight: 700;
  }

  .\32 xl {
    font: var(--font-2xl);
    font-weight: 700;
  }

  .xl {
    font: var(--font-xl);
    font-weight: 700;
  }

  .lg {
    font: var(--font-lg);
    font-weight: 500;
  }

  .md {
    font: var(--font-md);
    font-family: var(--font-heading);
    font-weight: 500;
  }
</style>
