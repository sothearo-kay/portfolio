---
import type { HTMLAttributes } from "astro/types"

export interface Props extends HTMLAttributes<"p"> {
  secondary?: boolean
  size?: "xs" | "sm" | "md"
  reset?: boolean
}

const { secondary = false, size = "md", class: className, reset = false, ...attrs } = Astro.props
---

<p class:list={["paragraph", className, size, { secondary, reset }]} {...attrs}>
  <slot />
</p>

<style>
.paragraph {
  &.xs {
    font: var(--font-xs);
  }

  &.sm {
    font: var(--font-sm);
  }

  &.md {
    font: var(--font-md);
  }

  &.secondary {
    color: var(--color-foreground-muted);
  }

  &.reset {
    margin-block: 0;
  }
}
</style>
