---
import type { HTMLAttributes } from "astro/types"

type BlockTag
  = | "div"
    | "main"
    | "section"
    | "article"
    | "aside"
    | "header"
    | "footer"
    | "nav"

interface Props extends HTMLAttributes<"div"> {
  as?: BlockTag
}

const { as: Tag = "div", class: className, ...attrs } = Astro.props;
---

<Tag class:list={["container", className]} {...attrs}>
  <slot />
</Tag>

<style>
.container {
  width: 100%;
  margin-inline: auto;
  padding-inline: 4rem;

  @media (max-width: 768px) {
    padding-inline: 1rem;
  }
}
</style>
