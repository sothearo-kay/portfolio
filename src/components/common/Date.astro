---
interface Props {
  date: Date
  class?: string
}

const { date, class: className } = Astro.props

const formattedDate = new Intl.DateTimeFormat("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
}).format(date)
---

<time datetime={date.toISOString()} class:list={["date", className]}>
  {formattedDate}
</time>

<style>
.date {
  font: var(--font-xs);
  color: var(--color-foreground-muted);
}
</style>
