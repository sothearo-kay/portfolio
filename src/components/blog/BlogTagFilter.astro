---
import XIcon from "~/icons/x.svg"

interface Props {
  currentTag: string
}

const { currentTag } = Astro.props
---

<div class="filter">
  <a href="/blog" class="clear inset-shadow">
    <XIcon />
    <span>Clear filter</span>
    <span class="tag">{currentTag}</span>
  </a>
  <a href="/blog/tag/" class="link">All tags</a>
</div>

<style>
  .filter {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .clear {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.375rem 0.75rem;
    border: 1px solid var(--color-border);
    border-radius: 2rem;
    text-decoration: none;
    color: var(--color-foreground-muted);
    font: var(--font-sm);
    transition: background-color 0.2s ease;

    &:hover {
      background: var(--color-background-secondary);
    }

    span:first-of-type {
      @media (max-width: 768px) {
        display: none;
      }
    }

    svg {
      width: 1rem;
      height: 1rem;
      flex-shrink: 0;
    }

    .tag {
      border: none;
    }
  }
</style>
