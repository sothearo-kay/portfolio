---
import Date from "~/components/common/Date.astro"

interface Props {
  date: Date
  tags: string[]
}

const { date, tags } = Astro.props
---

<div class="meta">
  <Date date={date} />
  {tags.length > 0 && (
    <>
      <span class="separator">â€”</span>
      <div class="tags">
        {tags.map(tag => (
          <span class="tag">{tag}</span>
        ))}
      </div>
    </>
  )}
</div>

<style>
  .meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;

    .separator {
      color: var(--color-foreground-muted);
      font: var(--font-sm);
    }

    .tags {
      display: flex;
      gap: 0.5rem;

      .tag {
        font: var(--font-xs);
        color: var(--color-foreground-muted);
        background: var(--color-background-secondary);
        padding: 0.125rem 0.375rem;
        border-radius: 0.25rem;
      }
    }
  }
</style>
