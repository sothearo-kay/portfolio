---
import Date from "~/components/common/Date.astro"

interface Props {
  date: Date
  tags: string[]
  readingTime?: string
}

const { date, tags, readingTime } = Astro.props
---

<div class="meta">
  <div class="date-time">
    <Date date={date} />
    {readingTime && (
      <>
        <span class="separator">â€¢</span>
        <span class="reading-time">{readingTime}</span>
      </>
    )}
  </div>
  {tags.length > 0 && (
    <div class="tags">
      {tags.map(tag => (
        <a href={`/blog/tag/${encodeURIComponent(tag)}`} class="tag">{tag}</a>
      ))}
    </div>
  )}
</div>

<style>
  .meta {
    display: flex;
    align-items: center;
    flex-wrap: wrap;

    @media (max-width: 768px) {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }

  .date-time {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .separator {
    color: var(--color-foreground-muted);
    font: var(--font-sm);
  }

  .reading-time {
    font: var(--font-xs);
    font-weight: 500;
    color: var(--color-foreground-muted);
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-left: 0.75rem;

    @media (max-width: 768px) {
      order: -1;
      margin-left: 0;
    }
  }

  .tag:hover {
    text-decoration: underline;
  }
</style>
