---
import Heading from "~/components/common/Heading.astro"
import Paragraph from "~/components/common/Paragraph.astro"
import TechIcon from "~/components/TechIcon.astro"
import { technologies } from "~/data/technologies"
import MonkeyIllustration from "~/icons/monkey-illustration.svg"
import Layout from "~/layouts/default.astro"
---

<Layout title="Home" description="Welcome to my portfolio">
  <section class="hero">
    <div class="content">
      <div class="text">
        <Heading as="h1" size="3xl">Hello, I'm Sothearo.</Heading>
        <Paragraph>
          I'm a <strong>Frontend Developer</strong> based in Phnom Penh who loves
          building beautiful, functional web experiences.
        </Paragraph>
        <Paragraph>
          Code by day, manga by night. Always excited about
          <strong>creating something amazing</strong>.
        </Paragraph>
      </div>

      <div class="image">
        <MonkeyIllustration class="illustration" />
      </div>
    </div>
  </section>

  <section class="technologies">
    <Heading as="h2" size="2xl">Technologies</Heading>
    <div class="grid">
      {technologies.map(tech => (
        <TechIcon name={tech.name} label={tech.label} />
      ))}
    </div>
  </section>
</Layout>

<style>
  .hero {
    padding-block: 2rem;

    .content {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
      align-items: center;
    }


    .illustration {
      width: 100%;
      max-width: 400px;
      height: auto;
    }
  }

  .technologies {
    h2 {
      margin-block: 2rem;
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(40px, 1fr));
      gap: 1rem;
      justify-items: center;
    }
  }

  @media (max-width: 768px) {
    .hero {
      padding-block: 2rem;

      .content {
        grid-template-columns: 1fr;
        text-align: center;
        gap: 0;
      }

      .image {
        grid-row-start: 1;
      }

      .illustration {
        max-width: 280px;
      }
    }
  }
</style>
