---
import Heading from "~/components/common/Heading.astro"
import Paragraph from "~/components/common/Paragraph.astro"
import Layout from "~/layouts/default.astro"
---

<Layout title="404" description="Page Not Found">
  <section class="error">
    <div class="number">404</div>
    <Heading as="h1" size="2xl">Page Not Found</Heading>
    <Paragraph secondary>The page you're looking for doesn't exist or has been moved.</Paragraph>
  </section>
</Layout>

<style>
.error {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  min-height: 60vh;

  .number {
    font-size: 6rem;
    font-weight: bold;
    color: var(--color-foreground-muted);
  }

  h1 {
    margin-block: 0;
  }
}
</style>
